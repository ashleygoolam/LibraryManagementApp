@model LibraryManagementApp.Models.LibraryCard

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center">Delete</h1>

<h3 class="text-center">Are you sure you want to delete this?</h3>
<div>
    <h4>LibraryCard <i class="bi bi-credit-card-2-back"></i></h4>
    <hr />
    <div class="row">
        <div class="col-md-8 offset-4">
            <dl class="row">
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.CardNumber)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.CardNumber)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Balance)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Balance)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.isActivated)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.isActivated)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.ApplicationUser)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.ApplicationUser!.Id)
                </dd>
            </dl>
            <div class="mt-5">
                <form asp-action="Delete">
                    <a asp-action="Index" class="btn btn-light me-2"><i class="bi bi-box-arrow-left"></i> Cancel</a>
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger">Confirm <i class="bi bi-trash3"></i></button>
                </form>
            </div>
        </div>
    </div>
</div>
