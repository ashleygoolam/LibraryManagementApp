@using LibraryManagementApp.Data.ViewModels;
@model LoginVM;

@{
    ViewData["Title"] = "Log in to your account";
}

<div class="row mt-4">
    <div class="card mt-5" style="width: 850px; margin:auto;">
        <div class="card-body">
            <div class="row">
                <div class="col-md-5">
                    <img src="~/Images/App/book-stack2.jpg" class="card-img-top" alt="...">
                </div>
                <div class="col-md-7">
                    <div class="row">
                        <div class="card-header">
                            <h2 class="card-title float-start"><strong>Sign In</strong></h2>
                        </div>
                        <form asp-action="Login">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="form-group mt-5">
                                <label asp-for="EmailAddress" class="form-label">Email Address:</label>
                                <input asp-for="EmailAddress" class="form-control" />
                                <span asp-validation-for="EmailAddress" class="text-danger"></span>
                            </div>
                            <div class="form-group mt-3">
                                <label asp-for="Password" class="form-label">Password:</label>
                                <input asp-for="Password" class="form-control" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            <div class="form-group mt-5 mb-2">
                                <button class="btn btn-outline-success float-end" type="submit">Sign In <i class="bi bi-check-circle"></i></button>
                                <a class="btn btn-light" asp-controller="Book" asp-action="Index"><i class="bi bi-backspace"></i> Cancel</a>
                            </div>
                        </form>
                        @if (TempData["Error"] != null)
                        {
                            <div class="col-md-12">
                                <div class="alert alert-danger text-center mt-4" style="margin:auto;">
                                    <small><b>Sorry!</b> - @TempData["Error"] </small>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
