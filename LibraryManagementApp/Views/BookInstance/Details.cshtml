@using LibraryManagementApp.Enums;
@model BookInstance

@{
    ViewData["Title"] = "Book Instance Details";
}

<div class="row" style="margin: auto; display: flex; justify-content: center; max-width: 500px;">
    <h4 class="text-center mt-3 mb-5">Book Instance Details</h4>
    <div class="row">
        <div>
            <div class="mt-5 mb-2">
                <h5><strong>Book:</strong> @Model.Book!.Title</h5>
            </div>
            <div class="mb-2">
                <h5><strong>Isbn Number:</strong> @Model.IsbnNumber</h5>
            </div>
            <div class="mb-2">
                <h5><strong>Book Status:</strong> @Model.bookStatus</h5>
            </div>
            <div class="mb-5">
                <h5><strong>Book Availability:</strong> @Model.bookAvailability</h5>
            </div>
        </div>
        <div style="margin-top:160px;">
            <a class="btn btn-light" asp-action="Index"><i class="bi bi-box-arrow-left"></i> Show All</a>
            @if (Model.bookAvailability != BookAvailability.Borrowed)
            {
                <a class="btn btn-outline-warning float-end" asp-action="Edit" asp-route-id="@Model.Id">
                    Edit <i class="bi bi-pencil-square"></i>
                </a>
            }
        </div>
    </div>
</div>
