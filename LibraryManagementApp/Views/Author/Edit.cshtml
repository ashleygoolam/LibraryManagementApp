@using LibraryManagementApp.Data.ViewModels;
@model NewAuthorVM

@{
    ViewData["Title"] = "Update Author";
}

<div class="container">
    <h4 class="text-center mt-4 mb-5">Edit an Author</h4>
    <div style="max-width: 650px; margin: auto;">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="row g-2">
                <div class="col-md-6">
                    <div class="row g-1">
                        <div class="card">
                            <div class="card-body">
                                <div class="col-md-12">
                                    <label asp-for="FullName" class="form-label">FullName:</label>
                                    <input asp-for="FullName" type="text" class="form-control">
                                    <span asp-validation-for="FullName" class="text-danger"></span>
                                </div>
                                <div class="col-md-12">
                                    <label asp-for="Biography" class="form-label">Biography:</label>
                                    <textarea asp-for="Biography" class="form-control" rows="4"></textarea>
                                    <span asp-validation-for="Biography" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <label asp-for="ProfilePicture" class="form-label">Profile Picture:</label>
                            <input asp-for="ProfilePicture" class="form-control" onchange="getImagePreview(event)">
                            <span asp-validation-for="ProfilePicture" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 text-center mb-3">
                    <img class="rounded-circle" id="imagePreview" src="~/Images/Authors/@Model.PreviewPicture" alt="Image for @Model.FullName"
                         style="width: 250px;">
                </div>
            </div>
            <div class="mt-5">
                <a asp-action="Index"
                   class="btn btn-light">
                    <i class="bi bi-box-arrow-left"></i> Back to List
                </a>
                <button type="submit"
                        class="float-end btn btn-outline-warning" style="margin-right: 78px;">
                    Save & Update <i class="bi bi-cloud-check"></i>
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts
{
    <script>
        function getImagePreview(event) {
            var image = URL.createObjectURL(event.target.files[0]);
            console.log(event.target.files[0]);
            var previewSection = document.getElementById('imagePreview');
            previewSection.src = image;
        }
    </script>
}
